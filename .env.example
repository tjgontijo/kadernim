# Informações do App (OBRIGATÓRIO)
NEXT_PUBLIC_APP_NAME="Kadernim"
NEXT_PUBLIC_APP_DESCRIPTION="App de bolso para toda professora moderna."

# Conexão com o banco de dados PostgreSQL
DATABASE_URL="postgresql://usuario:senha@localhost:5432/kadernim?schema=public"

# Chaves secretas para o Better Auth
BETTER_AUTH_SECRET="uma_chave_secreta_longa_e_aleatoria_para_seguranca"
AUTH_SECRET="uma_chave_secreta_longa_e_aleatoria_para_seguranca"
GOOGLE_CLIENT_ID="seu_google_client_id"
GOOGLE_CLIENT_SECRET="seu_google_client_secret"

# URL base da aplicação (usado para redirecionamentos)
# Desenvolvimento:
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
TRUSTED_ORIGINS="http://localhost:3000,https://localhost:3000"

# Produção:
# NEXT_PUBLIC_APP_URL="https://app.kadernim.com.br"
# NEXT_PUBLIC_BASE_URL="https://app.kadernim.com.br"
# TRUSTED_ORIGINS="https://app.kadernim.com.br"

# Configurações do Resend (Primário)
RESEND_API_KEY="re_123456789"
EMAIL_FROM="App <no-reply@app.com>"

# Configurações de email SMTP (Fallback)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="seu-email@gmail.com"
EMAIL_SERVER_PASSWORD="sua-senha-ou-app-password"

# Web Push (VAPID Keys - OBRIGATÓRIO)
NEXT_PUBLIC_VAPID_PUBLIC_KEY="sua_chave_publica_vapid"
VAPID_PRIVATE_KEY="sua_chave_privada_vapid"
VAPID_SUBJECT="mailto:seu-email@exemplo.com"

# UAZAPI - WhatsApp API (para envio de Magic Link)
UAZAPI_URL="https://elev8.uazapi.com"
UAZAPI_TOKEN="seu_token_uazapi"